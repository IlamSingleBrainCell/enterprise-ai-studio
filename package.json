{
  "name": "macquarie-cgm-posttrade-platform",
  "version": "1.0.0",
  "description": "Macquarie CGM Post Trade - AI-Powered SDLC Platform for regulatory compliance and automated trading systems",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "http-server dist -p 8080 -c-1",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "format": "prettier --write \"src/**/*.{js,css}\"",
    "clean": "rimraf dist"
  },
  "keywords": [
    "macquarie",
    "post-trade",
    "ai",
    "sdlc",
    "regulatory-compliance",
    "trading",
    "automation",
    "dora-metrics",
    "space-framework",
    "progressive-web-app"
  ],
  "author": "Macquarie CGM Post Trade Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/macquarie/cgm-posttrade-platform.git"
  },
  "bugs": {
    "url": "https://github.com/macquarie/cgm-posttrade-platform/issues"
  },
  "homepage": "https://macquarie.github.io/cgm-posttrade-platform/",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "http-server": "^14.1.1",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "vite": "^5.2.0",
    "vite-plugin-pwa": "^0.19.0"
  },
  "dependencies": {},
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/src/js/__tests__/setup.js"],
    "testMatch": ["<rootDir>/src/**/__tests__/**/*.test.js"],
    "collectCoverageFrom": [
      "src/js/**/*.js",
      "!src/js/__tests__/**",
      "!src/js/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100,
    "bracketSpacing": true,
    "arrowParens": "avoid"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2022": true,
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "plugins": ["html"],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  }
}